<%- include("partials/header"); %>

<h1>Compose</h1>
<form action="/compose" method="post">
  <div class="form-group">
    <label>Title</label>
    <input type="text" class="form-control" name="postTitle" placeholder="" autocomplete="off" />
  </div>
  <div class="form-group">
    <label>Post</label>
    <textarea type="textarea" class="form-control" cols="40" rows="5" style="resize: none;"></textarea>
  </div>
  <button type="submit" class="btn btn-primary" name="button" value="">Publish</button>
</form>

